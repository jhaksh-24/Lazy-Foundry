package anvil

import (
	"fmt"
)

func Parser(args []string) error {
    if len(args) < 7 {
        return fmt.Errorf("Usage: program rpcURL chainID forkURL privateKey gasLimit gasFee outputDir")
    }

    ImplementRpcURL(args[0])
    ImplementChainID(args[1])
    ImplementForkURL(args[2])

    if err := ImplementPrivateKey(args[3]); err != nil {
        return err
    }

    ImplementGasLimit(args[4])
    ImplementGasFee(args[5])
    anvilConfig.OutputDir = args[6]

    return nil
}

